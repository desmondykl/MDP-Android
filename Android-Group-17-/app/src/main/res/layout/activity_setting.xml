<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/printMDFString2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="208dp"
        android:layout_marginRight="208dp"
        android:background="@drawable/button_background2"
        android:text="Print MDF String"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/configureButton2"
        android:layout_width="201dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="364dp"
        android:background="@drawable/button_background"
        android:text="@string/configure"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/f1ActionButton2"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="472dp"
        android:layout_marginRight="472dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:contentDescription="F1"
        android:focusable="true"
        android:text="Action 1"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/configureButton2" />

    <Button
        android:id="@+id/f2ActionButton2"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="364dp"
        android:layout_marginRight="364dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:contentDescription="F2"
        android:focusable="true"
        android:text="Action 2"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/configureButton2" />

    <Button
        android:id="@+id/bluetoothButton"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/design_default_color_primary"
        android:drawableLeft="@drawable/ic_baseline_bluetooth_24"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Bluetooth Connect"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@id/printMDFString2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mapInfoButton"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#000000"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Map information"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@id/printMDFString2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>